@{
    ViewData["Title"] = "Home Page";
}
<!Doctype html>
<html>
<head>

    <script src="~/codemirror/lib/codemirror.js"></script>
    <link href="~/codemirror/lib/codemirror.css" rel="stylesheet" />
    <script src="~/codemirror/mode/xml/xml.js"></script>
    <link href="~/codemirror/theme/dracula.css" rel="stylesheet" />
    <link href="~/codemirror/theme/idea.css" rel="stylesheet" />
    <script src="~/codemirror/addon/hint/show-hint.js"></script>
    <link href="~/codemirror/addon/hint/show-hint.css" rel="stylesheet" />
    <script src="~/codemirror/addon/hint/javascript-hint.js"></script>
    <script src="~/codemirror/addon/edit/continuelist.js"></script>
    <script src="~/codemirror/addon/edit/closetag.js"></script>
</head>
<body>
    @using (Html.BeginForm("Scanner", "Home", FormMethod.Get))
    {

      <textarea id="editor"></textarea>
        <center>
            <input class="btn btn-success" type="submit" value="Scan" style="margin-top: 10px" />
        </center>
    }
  
    <textarea id="tags"></textarea>
    <script>


        var editor = CodeMirror.fromTextArea(document.getElementById('editor'), {
            value: "function myScript(){return 100;}\n",
            mode:"xml",
            theme: "dracula",
            lineNumbers: true,
            autoCloseTags: true,
           
           
        });


        var availableKeywords = ['SIowf', 'Stop', 'SIow', 'Loopwhen','Loli','Iteratewhen','If','Else','Chain','Chilo','Iow','Include'];
        $("#editor").autocomplete({
            source: availableKeywords
        });

        var documenteditor;

        document.addEventListener('DOMContentLoaded', function () {

            documenteditor = document.getElementById("editor").ej2_instances[0];

            documenteditor.spellChecker.languageID = 1033 //LCID of "en-us";

            documenteditor.spellChecker.removeUnderline = false;

            documenteditor.spellChecker.allowSpellCheckAndSuggestion = true;

        });


    </script>
   
</body>
</html>